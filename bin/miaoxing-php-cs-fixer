#!/bin/bash

set -e

if [[ -e ".php_cs" ]]; then
  config=".php_cs";
else
  config="vendor/miaoxing/coding-standards/.php_cs";
fi

# Run `miaoxing-php-cs-fixer fix` to execute fix
if [[ $1 = 'fix' ]]; then
    dry_run=""
else
    dry_run="--dry-run"
fi

vendor/bin/php-cs-fixer fix --config=${config} -v --allow-risky yes --dry-run --using-cache=no
