{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    },
    "allowImportExportEverywhere": true
  },
  "env": {
    "node": true,
    "browser": true,
    "amd": true,
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    // 暂不启用，如用到了外部类库的参数
    "react/prop-types": [
      0
    ]
  }
}
