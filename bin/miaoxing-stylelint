#!/bin/bash

set -e

if [[ -e ".stylelintrc.json" ]]; then
 config=".stylelintrc.json";
else
 config="node_modules/miaoxing-coding-standards/.stylelintrc.json";
fi

if [[ $1 = 'fix' ]]; then
    fix="--fix"
else
    fix=""
fi

./node_modules/.bin/stylelint --allow-empty-input --config ${config} "**/*.{css,scss,sass}" ${fix}
